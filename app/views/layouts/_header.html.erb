<header class="navbar navbar-default">
  <div class="container-fluid">
    <%= link_to t("views.layouts.header.logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.layouts.header.home"), root_url %></li>
        <% if user_signed_in? %>
          <% if can? :manage, :all %>
            <li>
              <%= link_to t("views.admin.subjects.all_subject"),
                admin_subjects_path %>
            </li>
            <li>
              <%= link_to t("views.admin.users.title"),
                admin_users_path %>
            </li>
            <li><%= link_to t("views.layouts.header.signout"),
              destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li><%= link_to t("views.layouts.header.contribute_questions"), "#" %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("views.layouts.header.profile"), "#" %></li>
                <li><%= link_to t("views.layouts.header.edit"), edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <li><%= link_to t("views.layouts.header.signout"),
                    destroy_user_session_path, method: :delete %>
                  </li>
                </li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t("views.layouts.header.signup"),
            new_user_registration_path %>
          </li>
          <li><%= link_to t("views.layouts.header.signin"),
            new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
