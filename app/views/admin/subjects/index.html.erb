 <% provide :title, t("views.admin.subjects.all_subject") %>
<div class="row">
  <h1><%= t "views.admin.subjects.all_subject" %></h1>

  <div class="subject-search">
    <%= search_form_for [:admin, @search], class: "form-inline" do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name_cont, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :duration %>
        <%= f.text_field :duration_eq, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :total_question %>
        <%= f.text_field :total_question_eq, class: "form-control" %>
      </div>
      <%= button_tag(type: "submit", class: "btn btn-primary",
        name: "commit", value: "conceal") do %>
        <span class="glyphicon glyphicon-search"></span>
      <% end %>
    <% end %>
  </div>

  <button class="btn btn-primary btn-lg" data-toggle="modal"
    data-target="#new-subject" data-whatever="@fat">
      <span class="glyphicon glyphicon-plus add_subject">
        <%= t("views.admin.subjects.add_new")%>
      </span>
  </button>

  <table class="table table-striped table-hover table-bordered" id="admin_subject">
    <thead>
      <tr class="info">
        <th><%= t "views.admin.subjects.index" %></th>
        <th><%= t "views.admin.subjects.name" %></th>
        <th><%= t "views.admin.subjects.total_question" %></th>
        <th><%= t "views.admin.subjects.duration" %></th>
        <th><%= t "views.admin.subjects.description" %></th>
        <th class="actions"><%= t "views.admin.subjects.actions" %></th>
      </tr>
    </thead>
    <tbody id="subjects-index">
      <% @subjects.each_with_index do |subject, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= subject.name %></td>
          <td><%= subject.total_question %></td>
          <td><%= subject.duration %> minutes</td>
          <td><%= subject.description %></td>
          <td>
            <%= link_to edit_admin_subject_path(subject),
              data: {toggle: "tooltip", placement: "top"}, title: t("edit") do %>
              <span class= "glyphicon glyphicon-edit"></span>
            <% end %> |
            <%= link_to admin_subject_path(subject),
              method: :delete, data: {toggle: "tooltip", placement: "top",
                confirm: t("views.admin.subjects.delete_confirm")},
                title: t("delete") do %>
              <span class="glyphicon glyphicon-trash text-danger"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @subjects %>
</div>

<!-- Modal -->
<div class="modal fade" id="new-subject" tabindex="-1" role="dialog"
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Create new subject</h4>
      </div>
      <%= form_for [:admin, @subject], remote: true do |f| %>
        <div class="modal-body">
          <div class="subject-errors">
          </div>

          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>

          <%= f.label :total_question %>
          <%= f.text_field :total_question, class: "form-control" %>

          <%= f.label :duration %>
          <%= f.text_field :duration, class: "form-control" %>

          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control" %>

          <%= f.submit class: "btn btn-primary create_subject"  %>
        </div>
      <% end %>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
